require 'rake'
require 'rake/testtask'

task :default => [:test]

desc 'Produce documentation'
task :doc do
    doc_dir = "#{File.dirname(__FILE__)}/doc"
    system "rm -r #{doc_dir}" if File.exist?(doc_dir)
    
    system 'rdoc -x test -S -N -m README'
     
end

# desc 'Run test suite'
# task :test do
#     require File.dirname(__FILE__) + '/test/units'
# end
    
    
Rake::TestTask.new('test') do |t|
    t.pattern = 'test/*_test.rb'
    t.verbose = true
    t.warning = true
end